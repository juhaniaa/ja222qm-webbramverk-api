<% content_for :title, "register user" %>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h1>Login</h1>

<%= form_tag(login_path, method: "post") do %>
  <p><%= label_tag(:email, "E-mail:") %></p>
  <p><%= email_field_tag(:email) %></p>

  <p><%= label_tag(:password, "Password:") %></p>
  <p><%= password_field_tag(:password) %></p>

  <p><%= link_to "Go back", root_path, class: "btn btn-default" %>
    <%= submit_tag("Login", class: "btn btn-primary") %></p>
  
<% end %>